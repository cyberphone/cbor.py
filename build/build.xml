<project name="CBOR Python module builder" default="help">

  <!-- set properties for this build -->
  <property name="local.dir" location="../local"/>
  <property name="temp.dir" location=".tmp"/>
  <property name="webpki.lib.dir" location="../../openkeystore/library/dist"/>
  <property name="doc.file" location="../doc/index.html"/>
  <property name="document-template.file" location="document-template.html"/>
  <property name="test.dir" location="../test"/>
  <property name="python-test.file" location="../test/test-all.py"/>
  <property name="python-template.file" location="template.py"/>

  <property name="debug"  value="on"/>

  <target name="help">
    <echo message="help build doc"/>
  </target>

  <target name="doc">
    <property file="dn-table.xml"/>
    <delete dir="${temp.dir}"/>
    <mkdir dir="${temp.dir}"/>
    <javac debug="${debug}"
           srcdir="src"
           destdir="${temp.dir}"
           includeAntRuntime="false">
      <classpath>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
    </javac>
    <java fork="yes"
      classname="CreateDocument"
      failonerror="true">
      <classpath>
        <pathelement path="${temp.dir}"/>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
      <arg line="${document-template.file} ${doc.file}"/>
    </java>
    <delete dir="${temp.dir}"/>
    <replace file="${doc.file}" token="@dn-table@" value="${dn-table}"/>
  </target>

  <target name="build">

    <fixcrlf srcdir="../"
             tab="remove"
             tablength="2"
             eol="lf"
             eof="remove"
             includes="*.py, *.json, *.html"/>

    <delete dir="${temp.dir}"/>
    <mkdir dir="${temp.dir}"/>
    <javac debug="${debug}"
           srcdir="src"
           destdir="${temp.dir}"
           includeAntRuntime="false">
      <classpath>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
    </javac>
    <java fork="yes"
      classname="BuildSystem"
      failonerror="true">
      <classpath>
        <pathelement path="${temp.dir}"/>
        <fileset dir="${webpki.lib.dir}">
          <include name="*.jar"/>
        </fileset>
      </classpath>
      <arg line="${python-template.file} ${python-test.file} ${test.dir}/"/>
    </java>

    <delete dir="${temp.dir}"/>

<!--
    <delete dir="${local.dir}"/>
    <mkdir dir="${local.dir}"/>
    <condition property="npm-exec" value="npm.cmd" else="npm">
      <os family="windows"/>
    </condition>
    <exec executable="${npm-exec}" failonerror="true" dir="${npm.dir}">
      <arg line="pack -pack-destination=${local.dir}"/>
    </exec>
-->

  </target>
</project>
